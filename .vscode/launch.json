{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Server Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Next.js: Client Debug (Chrome)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
